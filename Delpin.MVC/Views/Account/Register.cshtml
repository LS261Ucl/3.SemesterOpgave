@model RegisterViewModel

@{
    ViewData["Title"] = "Registrer";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RegisterDto.FullName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="RegisterDto.FullName" class="form-control" />
                        <span asp-validation-for="RegisterDto.FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterDto.Email" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="RegisterDto.Email" class="form-control" />
                        <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterDto.Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="RegisterDto.Password" class="form-control" type="password" />
                        <span asp-validation-for="RegisterDto.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="EqualPasswords" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Register" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>