@using Delpin.Mvc.Extensions
@model IEnumerable<ProductCategoryViewModel>

@{
    ViewData["Title"] = "Udlejningskatalog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<section>
    @if (User.IsAdmin() || User.IsSuperUser())
    {
        <a asp-action="Create" style="margin-left: 10px; width: 80px" class="btn btn-primary">Opret</a>
    }
    <div class="container">
        <div class="row row-cols-4">
            @foreach (var category in Model)
            {
                <div>
                    <a href="/ProductGroups?productCategory=@category.Name">
                        <div class="card col" style="width: 18rem; margin: 10px; padding: 0; max-width: 250px">
                            @if (string.IsNullOrEmpty(category.Image))
                            {
                                <img src="images/missing.png" class="card-img" style="max-width: 250px; height: 250px" alt="...">
                            }
                            else
                            {
                                <img src="@(category.Image)" class="card-img" style="max-width: 250px; height: 250px" alt="...">
                            }
                            <div class="card-body align-items-center" style="padding: 0; padding-top: 5px">
                                <p class="card-title" style="text-align: center">@category.Name</p>
                            </div>
                        </div>
                    </a>
                    @if (User.IsAdmin() || User.IsSuperUser())
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@category.Id" type="submit" style="margin-left: 10px; width: 80px; display: inline;" class="btn btn-secondary">Rediger</a>
                            <form asp-controller="ProductCategories" style="display: inline;" method="post">
                                <input asp-action="Delete" asp-route-id="@category.Id" type="submit" style="margin-left: 10px; width: 80px;" class="btn btn-danger" value="Slet" />
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>